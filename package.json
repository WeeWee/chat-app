{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "codegen": "graphql-codegen --require dotenv/config --config .graphqlrc.yml --watch",
    "dev": "concurrently \"remix dev\" \"npm run codegen\" \"npm run dev:css\"",
    "dev:css": "tailwindcss -w -i app/app.css -o app/tailwind.css",
    "start": "remix-serve build",
    "typecheck": "tsc -b",
    "clean": "rm -rf .cache node_modules build public/build && yarn"
  },
  "dependencies": {
    "@apollo/client": "^3.7.14",
    "@remix-run/node": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "@remix-run/serve": "^1.9.0",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-request": "^6.0.0",
    "isbot": "^3.6.5",
    "jsonwebtoken": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.4.0",
    "remix-auth-google": "^1.2.0",
    "zod": "^3.21.4",
    "zodix": "^0.4.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/client-preset": "^3.0.1",
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "eslint": "^8.27.0",
    "graphql-config": "^4.5.0",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
